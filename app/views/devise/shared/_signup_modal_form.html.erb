<%= form_with scope: :user, url: user_registration_path, method: :post, local: true, data: { turbo: false } do |f| %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="mb-4">
    <%= f.label :name, class: "block mb-1 font-semibold" %>
    <%= f.text_field :name, class: "w-full px-3 py-2 border rounded" %>
  </div>
  <div class="mb-4">
    <%= f.label :email, class: "block mb-1 font-semibold" %>
    <%= f.email_field :email, class: "w-full px-3 py-2 border rounded" %>
  </div>
  <div class="mb-4">
    <%= f.label :password, class: "block mb-1 font-semibold" %>
    <%= f.password_field :password, class: "w-full px-3 py-2 border rounded" %>
  </div>
  <%= f.submit "Sign Up", class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700" %>
<% end %>
