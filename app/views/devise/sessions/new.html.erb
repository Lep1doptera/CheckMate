<div class="w-full max-w-5xl mx-auto bg-white rounded-lg my-5 shadow p-8">
  <div class="h-full overflow-auto px-15 sm:px-10 md:px-20 lg:px-40">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.input :email,
                      label: "Email",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" },
                      wrapper_html: { class: "mb-4" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
        </div>

        <div>
          <%= f.input :password,
                      label: "Password",
                      required: false,
                      input_html: { autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" },
                      wrapper_html: { class: "mb-4" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.input :remember_me,
                        as: :boolean,
                        label: "Remember me",
                        wrapper_html: { class: "flex items-center" },
                        label_html: { class: "ml-2 text-sm text-gray-700" },
                        input_html: { class: "form-checkbox h-4 w-4 text-blue-600 transition duration-150 ease-in-out" } %>
          </div>
        <% end %>
      </div>

      <div>
        <%= f.button :submit, "Log in", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold rounded-md shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      </div>
    <% end %>

    <div class="mt-6 text-sm text-center text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
