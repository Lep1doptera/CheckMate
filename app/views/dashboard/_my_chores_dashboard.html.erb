<div class="flex flex-col gap-2 py-2 px-1">
<h3 class="mt-4 text-xl font-semibold">Incomplete Chores</h3>
  <div id="incomplete_chores">
  <% @chores.reject(&:completed).each do |chore| %>
    <%= render partial: "my_chore", locals: { chore: chore } %>
  <% end %>
   </div>
<h3 class="mt-6 text-xl font-semibold">Completed Chores</h3>
  <div id="completed_chores">
  <% @chores.select(&:completed).each do |chore| %>
    <%= render partial: "my_chore", locals: { chore: chore } %>
  <% end %>
  </div>
</div>
