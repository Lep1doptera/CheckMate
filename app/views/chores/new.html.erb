<div class="max-w-xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">New Chore</h1>

  <%= form_with model: @chore, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.text_field :name, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.text_area :description, rows: 4, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :due_date, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.date_field :date_to_be_completed, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Create Chore", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg" %>
    </div>
  <% end %>
</div>

<% if @chore.errors.any? %>
  <div class="mb-4 p-4 bg-red-100 border border-red-300 rounded">
    <p class="font-semibold text-red-600"><%= pluralize(@chore.errors.count, "error") %> prevented this chore from being saved:</p>
    <ul class="list-disc pl-5 text-red-600">
      <% @chore.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
