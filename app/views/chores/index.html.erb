<div class="flex flex-col gap-2 w-1/2 py-5 px-2"
  data-controller="chores">
    <%= link_to new_chore_path, class: "flex items-center gap-1 bg-blue-500 hover:bg-blue-500 text-white px-3 py-1 rounded text-sm", style: "width: 120px;" do %>
         New Chore
        <% end %>
  <% @chores.each do |chore| %>
    <div class="flex justify-between items-center bg-white shadow rounded-lg p-3"
     data-chores-target="chores">
      <div class="flex items-center">
        <input type="checkbox" class="form-checkbox h-5 w-5 text-blue-600" />
        <span class="ml-3 text-gray-800 text-lg"><%= chore.name %></span>

      </div>

      <div class="flex gap-2">
        <%= link_to edit_chore_path(chore), class: "flex items-center gap-1 bg-yellow-500 hover:bg-yellow-500 text-white px-3 py-1 rounded text-sm" do %>
          <i class="fas fa-edit"></i>
        <% end %>

        <%= link_to chore_path(chore),
              data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
              class: "flex items-center gap-1 bg-red-600 hover:bg-red-600 text-white px-3 py-1 rounded text-sm" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
