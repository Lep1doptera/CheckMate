<div class="max-w-xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">Edit Chore</h1>

  <%= simple_form_for @chore, html: { class: "space-y-4" } do |f| %>
    <div>
      <%= f.input :name, label_html: { class: "text-gray-700 font-medium mb-1 block" }, input_html: { class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" } %>
    </div>

    <div>
      <%= f.input :description, as: :text, label_html: { class: "text-gray-700 font-medium mb-1 block" }, input_html: { rows: 4, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" } %>
    </div>

    <div>
      <%= f.input :date_to_be_completed, as: :date, label: "Due Date", label_html: { class: "text-gray-700 font-medium mb-1 block" }, input_html: { class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" } %>
    </div>

    <div class="flex justify-end">
      <%= f.button :submit, "Update Chore", class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-lg" %>
    </div>

  <% end %>
</div>
